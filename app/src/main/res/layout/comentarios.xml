<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD991"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFCC84"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- TextView para mostrar los comentarios -->
        <TextView
            android:id="@+id/comentariosTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="@string/comentariosTitulo"
            android:textAlignment="center"
            android:textColor="#A26235"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- ListView para mostrar los comentarios -->

        <!-- EditText para que el usuario ingrese un nuevo comentario -->
        <ListView
            android:id="@+id/comentariosListView"
            android:layout_width="330dp"
            android:layout_height="448dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bordes_redondeados"
            android:backgroundTint="#A9FFFFFF"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:scrollbars="vertical">

        </ListView>

        <EditText
            android:id="@+id/nuevoComentarioEditText"
            android:layout_width="380dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bordes_redondeados"
            android:backgroundTint="#A8FFFFFF"
            android:fontFamily="@font/lato_regular"
            android:hint="Escribe un nuevo comentario"
            android:textColor="#A26235"
            android:textStyle="bold" />

        <!-- BotÃ³n para agregar un nuevo comentario -->
        <Button
            android:id="@+id/agregarComentarioButton"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4AF69319"
            android:fontFamily="@font/lato_regular"
            android:text="@string/botonAdd"
            android:textColor="#FFFDFD"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>